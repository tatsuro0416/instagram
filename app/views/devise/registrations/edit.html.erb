<% provide(:title, "Edit") %>
<div class="container main">
  <div class="card">
    <div class="form-wrap" >
      <div>
        <%= form_with model: @user, url: registration_path(@user), local: true, method: :patch do |form| %>
          <div class="form-group">
            <%= form.label :profile_photo, "プロフィール画像" %><br/>
            <%= form.file_field :profile_photo, accept: 'image/jpeg, image/png' %>
          </div>
          <div class="form-group">
            <%= form.label :name, "ユーザー名"%>
            <%= form.text_field :name, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :fullname, "お名前"%>
            <%= form.text_field :fullname, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :website, "ウェブサイト"%>
            <%= form.text_field :website, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :introduction, "自己紹介"%>
            <%= form.text_field :introduction, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :sex, "性別"%><br/>
            <%= form.radio_button :sex, 0, checked: true %>男性<%= form.radio_button :sex, 1 %>女性
          </div>
          <div class="form-group">
            <%= form.label :email, "メールアドレス"%>
            <%= form.email_field :email, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :phone, "電話番号"%>
            <%= form.text_field :phone, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :password, "パスワード"%>
            <%= form.password_field :password, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :password_confirmation, "確認"%>
            <%= form.password_field :password_confirmation, autofocus: true, class: "form-control" %>
          </div>

          <div class="actions">
            <%= form.submit "変更する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </p>
    </div>
  </div>
</div>