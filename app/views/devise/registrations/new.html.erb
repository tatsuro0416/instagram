<% provide(:title, "Sign up") %>
<div class="container main">
  <div class="card">
    <div class="form-wrap text-center" >
      <p class="text-secondary">友達の写真や動画をチェックしよう</p>
      <div>
        <%= form_with model: @user, url: user_registration_path(@user), local: true do |form| %>
          <div class="form-group">
            <%= form.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.text_field :name, autofocus: true, placeholder: "ユーザーネーム", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.text_field :fullname, autofocus: true, placeholder: "お名前", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.password_field :password, autofocus: true, placeholder: "パスワード", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.password_field :password_confirmation, autofocus: true, placeholder: "確認", class: "form-control" %>
          </div>

          <div class="actions">
            <%= form.submit "登録する", class: "btn btn-primary w-100" %>
          </div>

          <p class="devise-link">
            アカウントをお持ちですか？
            <%= link_to "サインイン", new_user_session_path , class: "link-block"%>
          </div>
        <% end %>
      </p>
    </div>
  </div>
</div>