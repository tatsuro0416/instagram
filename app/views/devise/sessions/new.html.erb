<% provide(:title, "Log in") %>
<div class="container main">
  <div class="card">
    <div class="form-wrap text-center" >
      <div>
        <%= form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true, method: :post do |form| %>
          <div class="form-group">
            <%= form.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.password_field :password, autofocus: true, placeholder: "パスワード", class: "form-control" %>
          </div>
          <div class="actions">
            <%= form.submit "ログインする", class: "btn btn-primary w-100" %>
          </div>

          <p class="devise-link">
            アカウントをお持ちでないですか？
            <%= link_to "登録する", new_user_registration_path , class: "link-block"%>
          </div>
        <% end %>
      </p>
    </div>
  </div>
</div>